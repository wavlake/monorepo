# =============================================================================
# Wavlake Monorepo Environment Configuration
# =============================================================================
# Copy to .env.local and uncomment ONE section below

# =============================================================================
# MINIMAL SETUP (Recommended for new developers)
# =============================================================================
# DEVELOPMENT=true
# SKIP_AUTH=true
# MOCK_STORAGE=true
# MOCK_STORAGE_PATH=./dev-storage
# FILE_SERVER_URL=http://localhost:8081
# DEFAULT_RELAY_URLS=ws://localhost:10547
# LOG_REQUESTS=true
# LOG_RESPONSES=true

# =============================================================================
# FIREBASE EMULATOR SETUP
# =============================================================================
# DEVELOPMENT=true
# FIREBASE_PROJECT_ID=demo-project
# GOOGLE_CLOUD_PROJECT=demo-project
# FIRESTORE_EMULATOR_HOST=localhost:8080
# FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
# FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
# DEFAULT_RELAY_URLS=ws://localhost:10547
# LOG_REQUESTS=true
# LOG_RESPONSES=true

# =============================================================================
# PRODUCTION SERVICES SETUP (Advanced)
# =============================================================================
# DEVELOPMENT=true
# FIREBASE_PROJECT_ID=your-firebase-project-id
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GCS_BUCKET_NAME=your-storage-bucket
# PROD_POSTGRES_CONNECTION_STRING_RO=postgresql://user:pass@host:5432/db
# DEFAULT_RELAY_URLS=ws://localhost:10547,wss://relay.wavlake.com
# LOG_REQUESTS=true

# =============================================================================
# COMMON CONFIGURATION (Optional)
# =============================================================================
# BACKEND_PORT=3000
# VITE_PORT=8080
# TEMP_DIR=/tmp
# LOG_HEADERS=true
# LOG_REQUEST_BODY=false
# LOG_RESPONSE_BODY=false
# POSTGRES_MAX_CONNECTIONS=10
# POSTGRES_MAX_IDLE_CONNECTIONS=5
# FIREBASE_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
# GIN_MODE=debug